{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/**/*.ts",
    "../../packages/**/*.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": ["dom", "dom.iterable", "es2022"],
    "baseUrl": "../../",
    "paths": {
      "@/*": ["apps/admin-ui/src/*"],
      "@components/*": ["packages/components/*"],
      "@packages/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules"]
}

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/order-service",
    "types": ["node", "express"],
    "rootDir": "../../",
    "baseUrl": "../../",
    "paths": {
      "@packages/*": ["packages/*"]
    },
    "tsBuildInfoFile": "out-tsc/order-service/tsconfig.app.tsbuildinfo"
  },
  "include": ["src/**/*.ts", "../../packages/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "webpack.config.js",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}

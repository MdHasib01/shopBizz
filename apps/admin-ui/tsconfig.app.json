{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "../../",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "lib": ["dom", "dom.iterable", "es2022"],
    "baseUrl": "../../",
    "jsx": "preserve",
    "paths": {
      "@/*": ["apps/admin-ui/src/*"],
      "@components/*": ["packages/components/*"],
      "@packages/*": ["packages/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../packages/**/*.ts",
    "../../packages/**/*.tsx"
  ],
  "exclude": []
}
